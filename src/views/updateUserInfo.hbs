{{>navbar }}

<hr />
<div class='container text-center'>
  <h2>Info de usuario</h2>
</div>
<form method='GET' action='#' id='f' enctype='multipart/form-data' class='container'>
  <div class='mb-3 row'>
    <label for='name' class='col-sm-2 col-form-label'>Nombre</label>
    <div class='col-sm-10'>
      <input type='text' class='form-control' id='name' name='name' placeholder='Nombre' required />
    </div>
  </div>
  <div class='mb-3 row'>
    <label for='lastName' class='col-sm-2 col-form-label'>Apellido</label>
    <div class='col-sm-10'>
      <input type='text' class='form-control' id='lastName' name='lastName' placeholder='Apellido' required />
    </div>
  </div>
  <div class='mb-3 row'>
    <label for='address' class='col-sm-2 col-form-label'>Direccion</label>
    <div class='col-sm-10'>
      <input type='text' class='form-control' id='address' name='address' placeholder='Direccion' required />
    </div>
  </div>

  <div class='mb-3 row'>

    <label for='phone' class='col-sm-2 col-form-label'>Telefono</label>
    <div class='col-sm-10'>
      <input type='number' class='form-control' id='phone' name='phone' placeholder='telefono' required />
    </div>
  </div>

  <div class='mb-3 row'>
    <label for='avatar' class='col-sm-2 col-form-label'>Image File</label>
    <div class='col-sm-10'>
      <input class='form-control' type='file' id='avatar' name='avatar' />

    </div>
  </div>

  <div class='col-12'>
    <button class='btn btn-primary btnUpdate' type='button' onclick='updateUser()' id={{id}}>Actualizar Usuario</button>
  </div>
</form>

<div class='alert alert-success alert-dismissible fade show mt-3' id='msg' role='alert' style='display: none'>
  <span id='msgSpan'> </span>
</div>

<script src='/resources/js/updateUser.js'></script>